@model List<Secretaries>;

@{
    ViewData["Title"] = " Listagem de Usuários Cadastrados";

    Users u = new Users();
}

<div class="container-fluid container-userList">

    <form asp-controller="Secretaries" asp-action="ListOfRegisteredSecretaries" method="Get">

        <div class="search-box">

            <div class="input-group search-group">
                <div class="input-group-prepend">
                    <i class="input-group-text bi bi-search"></i>
                </div>
                <input class="btn btn-md search btn-light text-justify" type="text" placeholder="Busque por Secretarias"
                    name="q" />
            </div>

            <input class="btn btn-md btn-dark btn-searchUser" type="submit" value="Pesquisar" />

        </div>

    </form>

    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-bordered table-striped table-light table-hover table-users">

            <thead class="thead-dark">

                <tr>

                    <th>Id</th>
                    <th>Nome da Secretária</th>
                    <th>Abreviação</th>
                    <th>Ações</th>

                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model)
                {

                    <tr>

                        <td>@item.Id.ToString("D4")</td>

                        <td>@item.Name</td>

                        <td>@item.Acronym</td>

                        <td>

                            <button class="btn btn-sm btn-outline-secondary" type="button" data-toggle="modal"
                                data-target="#upgradeSecretary-@item.Id" title="Editar Secretaria"><i
                                    class="bi bi-building-gear"></i></button>

                            <button class="btn btn-sm btn-outline-danger" type="button" data-toggle="modal"
                                data-target="#deleteSecretary-@item.Id" title="Excluir Secretaria"><i
                                    class="bi bi-building-fill-x"></i></button>

                        </td>

                    </tr>

                    <!--Start DeleteSecretary Modal-->

                    <div class="modal fade" id="deleteSecretary-@item.Id" tabindex="-1" role="dialog"
                        aria-labelledby="deleteSecretaryTitle" aria-hidden="true">

                        <div class="modal-dialog modal-dialog-centered" role="document">

                            <div class="modal-content">

                                <div class="modal-header">

                                    <h3 class="modal-title text-danger text-center mb-0 p-0" id="deleteSecretaryTitle">
                                        Alerta!</h3>

                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                                        <span aria-hidden="true">&times;</span>

                                    </button>

                                </div>

                                <div class="modal-body">
                                    @await Html.PartialAsync("_DeleteSecretary.cshtml", @item)
                                </div>

                            </div>

                        </div>

                    </div>

                    <!--Finish DeleteSecretary Modal-->

                    <!--Start UpgradeSecretary Modal-->

                    <div class="modal fade" id="upgradeSecretary-@item.Id" tabindex="-1" role="dialog"
                        aria-labelledby="upgradeSecretaryTitle" aria-hidden="true">

                        <div class="modal-dialog modal-dialog-centered" role="document">

                            <div class="modal-content">

                                <div class="modal-header p-2">

                                    <img class="img-fluid logo-register-secretary" src="../images/pmtm-logo.png"
                                        alt="Imagem Logo da tela de Login">

                                    <div class="col-md-8 register-secretary-header">
                                        <h1 class="">PREFEITURA MUNICIPAL DE TRÊS MARIAS</h1>

                                        <h2 class="">SEMAD - SECRETARIA MUNICIPAL DE ADMINISTRAÇÃO</h2>
                                    </div>

                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                                        <span aria-hidden="true">&times;</span>

                                    </button>

                                </div>

                                <div class="modal-body p-0">
                                    @await Html.PartialAsync("_UpgradeSecretary.cshtml", @item)
                                </div>

                            </div>

                        </div>

                    </div>

                    <!--Finish UpgradeSecretary Modal-->

                }

            </tbody>

        </table>

        <div class="filterButton-container">

            <p>Páginas : </p>

            @for (int i = 1; i <= (int)ViewData["pageQuantity"]; i++)
            { // paginação cria os links para as páginas
                <a class="btn btn-sm btn-outline-primary" href="/Secretaries/ListOfRegisteredSecretaries?pages=@i">@i</a>
            }

        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3 w-100 h-100" role="alert">
            Nenhuma Secretaria cadastrada !
        </div>
    }

</div>